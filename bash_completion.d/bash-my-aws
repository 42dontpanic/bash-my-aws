_cf_list() {
    local command="$1"
    local word="$2"
    COMPREPLY=($(compgen -W "$(cf_list)" -- ${word}))
    return 0
}

_instances() {
    local command="$1"
    local word="$2"

    case $word in
      "") options="i-a i-b" ;;
      *)
        options=$(instances)
      ;;
    esac

    COMPREPLY=($(compgen -W "${options}" -- ${word}))
    return 0
}

_asgs() {
    local command="$1"
    local word="$2"
    local options=$(asgs)

    COMPREPLY=($(compgen -W "${options}" -- ${word}))
    return 0
}

complete -F _cf_list cf_elbs
complete -F _cf_list cf_instances
complete -F _cf_list cf_resources
complete -F _cf_list instances_in_stack

complete -F _instances instance_asg
complete -F _instances instance_dns
complete -F _instances instance_iam_profile
complete -F _instances instance_ip
complete -F _instances instance_type
complete -F _instances instance_volumes
complete -F _instances instances

complete -F _asgs asg_capacity
complete -F _asgs asg_instances
complete -F _asgs asg_resume
complete -F _asgs asg_suspend
complete -F _asgs asg_suspended

