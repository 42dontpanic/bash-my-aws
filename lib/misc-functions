#!/bin/bash
#
# miscellaneous functions that don't belong anywhere else

regions() {
  aws ec2 describe-regions --query "Regions[].[RegionName]" --output text | sort
}

region() {
  local inputs=$(__bma_read_inputs $@)
  if [[ -z "$inputs" ]]; then
    echo "${AWS_DEFAULT_REGION:-'AWS_DEFAULT_REGION not set'}"
  else
    AWS_DEFAULT_REGION="$inputs"
  fi
}

aws-account-alias() {
  aws iam list-account-aliases --query AccountAliases --output text
}
